{"ast":null,"code":"import { ref, watch } from \"vue\";\nexport default {\n  name: \"Demo\",\n  setup: function () {\n    let sum = ref(0);\n    let msg = ref('Morries_wu');\n    /*情况一:监视ref所定义的一个响应式数据\r\n    watch(sum,(newValue, oldValue)=>{\r\n      console.log('sum的值变化了', newValue, oldValue)\r\n    })*/\n\n    /*情况二:监视ref所定义的多个响应式数据*/\n\n    watch([sum, msg], (newValue, oldValue) => {\n      console.log('sum的值变化了', newValue, oldValue);\n    });\n    /*返回一个对象(常用)*/\n\n    return {\n      sum,\n      msg\n    };\n  }\n  /*watch: {\r\n    sum: {\r\n      immediate: true,\r\n      deep: true,\r\n      handler(newValue, oldValue) {\r\n        console.log('sum的值变化了', newValue, oldValue)\r\n      }\r\n    }\r\n  }*/\n\n};","map":{"version":3,"mappings":"AASA,SAAQA,GAAR,EAAaC,KAAb,QAAyB,KAAzB;AAEA,eAAe;EACbC,IAAI,EAAE,MADO;EAEbC,KAAK,EAAE,YAAY;IACjB,IAAIC,GAAE,GAAIJ,GAAG,CAAC,CAAD,CAAb;IACA,IAAIK,GAAE,GAAIL,GAAG,CAAC,YAAD,CAAb;IAEA;;;;;IAKA;;IACAC,KAAK,CAAC,CAACG,GAAD,EAAKC,GAAL,CAAD,EAAW,CAACC,QAAD,EAAWC,QAAX,KAAsB;MACpCC,OAAO,CAACC,GAAR,CAAY,UAAZ,EAAwBH,QAAxB,EAAkCC,QAAlC;IACD,CAFI,CAAL;IAKA;;IACA,OAAO;MACLH,GADK;MAELC;IAFK,CAAP;EAID;EACD;;;;;;;;;;AAvBa,CAAf","names":["ref","watch","name","setup","sum","msg","newValue","oldValue","console","log"],"sourceRoot":"","sources":["F:\\Multifunctionapplication\\Advanced Files\\IntelliJ IDEA Project\\Vue\\Vue3.0\\vue3_test\\src\\components\\Demo.vue"],"sourcesContent":["<template>\r\n  <h2>当前求和为:{{ sum }}</h2>\r\n  <button @click=\"sum++\">点我+1</button>\r\n  <br>\r\n  <h2>当前的信息为:{{ msg }}</h2>\r\n  <button @click=\"msg+='!'\">修改信息</button>\r\n</template>\r\n\r\n<script>\r\nimport {ref, watch} from \"vue\";\r\n\r\nexport default {\r\n  name: \"Demo\",\r\n  setup: function () {\r\n    let sum = ref(0)\r\n    let msg = ref('Morries_wu')\r\n\r\n    /*情况一:监视ref所定义的一个响应式数据\r\n    watch(sum,(newValue, oldValue)=>{\r\n      console.log('sum的值变化了', newValue, oldValue)\r\n    })*/\r\n\r\n    /*情况二:监视ref所定义的多个响应式数据*/\r\n    watch([sum,msg